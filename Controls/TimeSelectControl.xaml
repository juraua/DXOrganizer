<UserControl x:Class="DXOrganizer.TimeSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DXOrganizer"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="250">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtHour" Text="{Binding Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="/DXOrganizer;component/Fonts/#MicraDi"  FontSize="30" Background="{x:Null}" BorderBrush="{x:Null}" SelectionBrush="#FF4D4D4D" Foreground="White" VerticalAlignment="Center"/>
            <Label Content=":" FontFamily="/DXOrganizer;component/Fonts/#CalipsoC"  FontSize="36" RenderTransformOrigin="0.571,0.957" Foreground="White" VerticalAlignment="Center"/>
            <TextBox x:Name="txtMin" Text="{Binding Minutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="/DXOrganizer;component/Fonts/#MicraDi"  FontSize="30"  BorderBrush="{x:Null}" Background="{x:Null}" SelectionBrush="#FF3399FF" Foreground="White" VerticalAlignment="Center"/>    
        </StackPanel>
        
    </Grid>
</UserControl>
